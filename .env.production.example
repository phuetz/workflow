# Production Environment Configuration for Workflow Automation Platform
# Copy this file to .env.production and update the values

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=production
PORT=3000
API_PORT=3001
WEBSOCKET_PORT=3002

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://workflow:workflow123@postgres:5432/workflow
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=30000

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_KEY_PREFIX=workflow:

# ===========================================
# Security Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_ROUNDS=12
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# ===========================================
# OAuth Configuration
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
OAUTH_REDIRECT_URL=https://your-domain.com/auth/callback

# ===========================================
# AI Services Configuration
# ===========================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint

# ===========================================
# Communication Services
# ===========================================
SENDGRID_API_KEY=your-sendgrid-api-key
SLACK_BOT_TOKEN=your-slack-bot-token
DISCORD_BOT_TOKEN=your-discord-bot-token
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# ===========================================
# Cloud Storage Configuration
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=your-s3-bucket-name
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account.json
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection

# ===========================================
# Monitoring & Observability
# ===========================================
LOG_LEVEL=info
METRICS_ENABLED=true
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
PROMETHEUS_METRICS_PORT=9464
SENTRY_DSN=your-sentry-dsn

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ===========================================
# File Upload Configuration
# ===========================================
MAX_FILE_SIZE=100MB
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=image/*,application/pdf,text/*

# ===========================================
# Email Configuration
# ===========================================
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@your-domain.com

# ===========================================
# WebSocket Configuration
# ===========================================
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_COMPRESSION=true

# ===========================================
# Performance Configuration
# ===========================================
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=4
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# ===========================================
# Infrastructure Configuration
# ===========================================
AUTO_SCALING_ENABLED=true
MIN_REPLICAS=2
MAX_REPLICAS=10
TARGET_CPU=70
TARGET_MEMORY=80
SCALE_UP_COOLDOWN=300
SCALE_DOWN_COOLDOWN=600

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================================
# Feature Flags
# ===========================================
ENABLE_COLLABORATION=true
ENABLE_AI_FEATURES=true
ENABLE_MARKETPLACE=true
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_WORKFLOW_TEMPLATES=true
ENABLE_ENTERPRISE_FEATURES=true

# ===========================================
# Development Tools (disable in production)
# ===========================================
DEBUG_MODE=false
ENABLE_PLAYGROUND=false
MOCK_EXTERNAL_SERVICES=false

# ===========================================
# Custom Integration Keys
# ===========================================
# Add your custom integration API keys here
CUSTOM_INTEGRATION_KEY_1=
CUSTOM_INTEGRATION_KEY_2=
CUSTOM_INTEGRATION_KEY_3=
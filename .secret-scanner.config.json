{
  "$schema": "./secret-scanner.schema.json",
  "version": "1.0.0",
  "enabled": true,
  "scanOnCommit": true,
  "scanOnPush": true,
  "scanSchedule": "0 2 * * *",

  "scanning": {
    "include": [
      "**/*"
    ],
    "exclude": [
      "node_modules/**",
      ".git/**",
      "dist/**",
      "build/**",
      "coverage/**",
      "*.lock",
      "package-lock.json",
      "**/*.md",
      "**/*.log",
      ".env.example",
      ".env.template",
      "**/*.min.js",
      "**/*.bundle.js",
      "**/test/**/*.fixture.*",
      "**/fixtures/**"
    ],
    "maxFileSize": 1048576,
    "skipBinaryFiles": true
  },

  "reporting": {
    "createIssue": true,
    "commentOnPR": true,
    "failBuild": true,
    "uploadArtifacts": true,
    "retentionDays": 90,
    "formats": ["json", "sarif"]
  },

  "severity": {
    "failOn": ["critical", "high"],
    "warnOn": ["medium"],
    "ignoreOn": []
  },

  "notifications": {
    "email": {
      "enabled": false,
      "recipients": []
    },
    "slack": {
      "enabled": false,
      "webhookUrl": ""
    }
  },

  "customPatterns": [
    {
      "id": "custom-api-key",
      "name": "Custom API Key Pattern",
      "description": "Add your custom secret patterns here",
      "pattern": "",
      "severity": "high",
      "confidence": "medium",
      "category": "Custom",
      "enabled": false
    }
  ],

  "falsePositives": {
    "patterns": [
      "example\\.com",
      "test@test\\.com",
      "dummy.*",
      "fake.*",
      "sample.*",
      "placeholder.*"
    ],
    "files": []
  },

  "remediation": {
    "autoFixEnabled": false,
    "createPullRequest": false,
    "suggestEnvironmentVariables": true
  }
}

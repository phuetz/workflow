{
  "name": "workflow-desktop",
  "version": "1.0.0",
  "description": "Workflow Automation Platform - Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.workflow.desktop",
    "productName": "Workflow Platform",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": {
        "teamId": "YOUR_TEAM_ID"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "certificateFile": "cert.pfx",
      "certificatePassword": ""
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "protocols": [
      {
        "name": "Workflow Protocol",
        "schemes": ["workflow"]
      }
    ],
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.1.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.3",
    "node-machine-id": "^1.1.12",
    "systeminformation": "^5.21.20",
    "ws": "^8.16.0",
    "axios": "^1.6.2",
    "keytar": "^7.9.0",
    "electron-context-menu": "^3.6.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-notarize": "^1.2.2",
    "@electron/rebuild": "^3.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/workflow/desktop.git"
  },
  "author": "Workflow Team",
  "license": "MIT"
}
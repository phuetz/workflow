{
  "enabled": true,
  "mode": "recommendation-only",
  "notifications": {
    "slack": {
      "enabled": true,
      "webhook": "${SLACK_WEBHOOK_URL}",
      "channel": "#ops-alerts",
      "mentionOnCritical": true
    },
    "email": {
      "enabled": true,
      "recipients": ["ops@company.com", "devops@company.com"],
      "sendOnSeverity": ["high", "critical"]
    },
    "dashboard": {
      "enabled": true,
      "autoRefresh": true,
      "refreshInterval": 30000
    }
  },
  "monitoring": {
    "memoryCheck": {
      "enabled": true,
      "interval": 60000,
      "thresholds": {
        "warning": 70,
        "critical": 85,
        "emergency": 95
      }
    },
    "errorTracking": {
      "enabled": true,
      "maxHistory": 1000,
      "retentionDays": 30
    },
    "statisticsReport": {
      "enabled": true,
      "interval": 300000
    }
  },
  "correctors": {
    "network": {
      "enabled": true,
      "patterns": [
        "ETIMEDOUT",
        "ECONNREFUSED",
        "ECONNRESET",
        "ENETUNREACH",
        "EHOSTUNREACH"
      ],
      "retryStrategy": {
        "maxRetries": 3,
        "delays": [1000, 2000, 4000],
        "backoffMultiplier": 2
      }
    },
    "memory": {
      "enabled": true,
      "patterns": [
        "ENOMEM",
        "OutOfMemoryError",
        "JavaScript heap out of memory"
      ],
      "thresholds": {
        "warning": 70,
        "critical": 90
      }
    },
    "database": {
      "enabled": true,
      "patterns": [
        "ECONNREFUSED",
        "DatabaseError",
        "Connection terminated",
        "too many connections",
        "Deadlock",
        "Lock wait timeout"
      ],
      "connectionPool": {
        "min": 5,
        "max": 20,
        "acquireTimeoutMillis": 10000,
        "idleTimeoutMillis": 30000
      }
    }
  },
  "validation": {
    "enabled": true,
    "runInTestEnvironment": true,
    "requireHumanApproval": true,
    "autoRollbackOnFailure": true,
    "validationTimeout": 300000
  },
  "reporting": {
    "generateReports": true,
    "reportFormats": ["json", "html", "markdown"],
    "includeCodeExamples": true,
    "includeRollbackPlan": true
  },
  "security": {
    "requireApprovalFor": {
      "risky": true,
      "moderate": true,
      "safe": false
    },
    "preventAutoApply": true,
    "auditLog": true,
    "notifySecurityTeam": true
  }
}

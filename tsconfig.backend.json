{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "include": [
    "src/backend/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__/**",
    "tests/**"
  ]
}

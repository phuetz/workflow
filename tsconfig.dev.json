{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "sourceMap": true,
    "allowImportingTsExtensions": false,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/__tests__/**",
    "tests/**"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
